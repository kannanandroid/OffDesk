<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvawesome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:text="AWESOME"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp">

        </TextView>

        <TextView
            android:id="@+id/tvsuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvawesome"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:text="Your Booking has been Successfully Confirmed.\n
Check your email for more details"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp">

        </TextView>

        <RelativeLayout
            android:id="@+id/rlSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_below="@+id/tvsuccess"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/login_rounded_corner_button"
            android:gravity="center">

            <TextView
                android:id="@+id/tvsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:text="OK"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </RelativeLayout>
</layout>